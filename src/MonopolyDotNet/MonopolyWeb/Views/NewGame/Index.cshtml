@model MonopolyWeb.Models.ViewModels.NewGameInput

@using Microsoft.Web.Mvc
@using MonopolyWeb.Controllers
@using MonopolyWeb.Models.Core
@{
  ViewBag.Title = "Start a new game";
}


<h2>Start a new game</h2>

@{
  using (Html.BeginForm<NewGameController>(x => x.Index()))
  {

      <div class="span5" style="height: 300px">
        <fieldset>
          <legend>Player 1 (You)</legend>
          <h5>Enter your name and totem. <em>Choose wisely</em></h5>
          <label>Name: <input type="text" name="Name" value="@Model.Name"/></label>
          @foreach (var totem in Enum.GetValues(typeof (Totem)))
          {
            <label>@Html.RadioButtonFor(x => x.Totem, totem) @(totem)</label>
          }
        </fieldset>
    </div>
    <div class="span5"  style="height: 300px">
      <fieldset>
        <legend>Opponent 1</legend>
        <h5>Select a computer opponent.</h5>
        <label>@Html.RadioButtonFor(x => x.Opponent1, "Rube") Rube</label>
        <label>@Html.RadioButtonFor(x => x.Opponent1, "Chester") Chester</label>
        <label>@Html.RadioButtonFor(x => x.Opponent1, "Mike Shishesky") Mike Shishesky</label>
        <label>@Html.RadioButtonFor(x => x.Opponent1, "Mike Krzyzewski") Mike Krzyzewski</label>
        <label>@Html.RadioButtonFor(x => x.Opponent1, "Adolf") Adolf</label>
      </fieldset>
    </div>
    <div class="span5"  style="height: 300px">
      <fieldset>
        <legend>Opponent 2</legend>
        <h5>Select a computer opponent.</h5>
        <label>@Html.RadioButtonFor(x => x.Opponent2, "Rube") Rube</label>
        <label>@Html.RadioButtonFor(x => x.Opponent2, "Chester") Chester</label>
        <label>@Html.RadioButtonFor(x => x.Opponent2, "Mike Shishesky") Mike Shishesky</label>
        <label>@Html.RadioButtonFor(x => x.Opponent2, "Mike Krzyzewski") Mike Krzyzewski</label>
        <label>@Html.RadioButtonFor(x => x.Opponent2, "Adolf") Adolf</label>
      </fieldset>
    </div>
    <div class="span5"  style="height: 300px">
      <fieldset>
        <legend>Opponent 3</legend>
        <h5>Select a computer opponent.</h5>
        <label>@Html.RadioButtonFor(x => x.Opponent3, "Rube") Rube</label>
        <label>@Html.RadioButtonFor(x => x.Opponent3, "Chester") Chester</label>
        <label>@Html.RadioButtonFor(x => x.Opponent3, "Mike Shishesky") Mike Shishesky</label>
        <label>@Html.RadioButtonFor(x => x.Opponent3, "Mike Krzyzewski") Mike Krzyzewski</label>
        <label>@Html.RadioButtonFor(x => x.Opponent3, "Adolf") Adolf</label>
      </fieldset>
    </div>
    <div class="span12"><input class="btn btn-large" type="submit" value="Submit"/> </div>
                      
  }
}