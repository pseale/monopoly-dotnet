@model MonopolyWeb.Models.ViewModels.NewGameInput

@using Microsoft.Web.Mvc
@using MonopolyWeb.Controllers
@{
  ViewBag.Title = "Start a new game";
}


<h2>Start a new game</h2>

@{
  using (Html.BeginForm<NewGameController>(x => x.Index()))
  {

      <div class="span5" style="height: 300px">
        <fieldset>
          <legend>Player 1 (You)</legend>
          <h5>Enter your name and totem. <em>Choose wisely</em></h5>
          <label>Name: <input type="text" name="Name" value="@Model.Name"/></label>

          <label>@Html.RadioButtonFor(x => x.Totem, "Dog") Dog</label>
          <label>@Html.RadioButtonFor(x => x.Totem, "Thimble") Thimble</label>
          <label>@Html.RadioButtonFor(x => x.Totem, "Shoe") Shoe</label>
          <label>@Html.RadioButtonFor(x => x.Totem, "Horseman") Horseman</label>
        </fieldset>
    </div>
    <div class="span5"  style="height: 300px">
      <fieldset>
        <legend>Opponent 1</legend>
        <h5>Select a computer opponent.</h5>
        <label>@Html.RadioButtonFor(x => x.Second, "Rube") Rube</label>
        <label>@Html.RadioButtonFor(x => x.Second, "Chester") Chester</label>
        <label>@Html.RadioButtonFor(x => x.Second, "Mike Shishesky") Mike Shishesky</label>
        <label>@Html.RadioButtonFor(x => x.Second, "Mike Krzyzewski") Mike Krzyzewski</label>
        <label>@Html.RadioButtonFor(x => x.Second, "Adolf") Adolf</label>
      </fieldset>
    </div>
    <div class="span5"  style="height: 300px">
      <fieldset>
        <legend>Opponent 2</legend>
        <h5>Select a computer opponent.</h5>
        <label>@Html.RadioButtonFor(x => x.Third, "Rube") Rube</label>
        <label>@Html.RadioButtonFor(x => x.Third, "Chester") Chester</label>
        <label>@Html.RadioButtonFor(x => x.Third, "Mike Shishesky") Mike Shishesky</label>
        <label>@Html.RadioButtonFor(x => x.Third, "Mike Krzyzewski") Mike Krzyzewski</label>
        <label>@Html.RadioButtonFor(x => x.Third, "Adolf") Adolf</label>
      </fieldset>
    </div>
    <div class="span5"  style="height: 300px">
      <fieldset>
        <legend>Opponent 3</legend>
        <h5>Select a computer opponent.</h5>
        <label>@Html.RadioButtonFor(x => x.Fourth, "Rube") Rube</label>
        <label>@Html.RadioButtonFor(x => x.Fourth, "Chester") Chester</label>
        <label>@Html.RadioButtonFor(x => x.Fourth, "Mike Shishesky") Mike Shishesky</label>
        <label>@Html.RadioButtonFor(x => x.Fourth, "Mike Krzyzewski") Mike Krzyzewski</label>
        <label>@Html.RadioButtonFor(x => x.Fourth, "Adolf") Adolf</label>
      </fieldset>
    </div>
    <div class="span12"><input class="btn btn-large" type="submit" value="Submit"/> </div>
                      
  }
}